        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="" Height="430" Width="650">
    <Grid>
        <Button Content="Book Borrowing" HorizontalAlignment="Left" Margin="222,288,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_BorrowBook"/>
        <Button Content="Book Return" HorizontalAlignment="Left" Margin="111,288,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_bookReturn"/>

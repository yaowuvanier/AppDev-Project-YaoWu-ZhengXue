<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="Library Management System" Height="400" Width="340">
    <Grid Margin="0,0,-13,-6">
        <Button Content="Reader   Login" HorizontalAlignment="Left" Margin="90,130,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_ReaderLogin"/>
        <Button Content="Administrator  login" HorizontalAlignment="Left" Margin="90,200,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_adminLogin"/>
        <Button Content="logout" HorizontalAlignment="Left" Margin="90,270,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_logout"/>
        <Label Content="Welcome to the library" HorizontalAlignment="Left" Margin="54,40,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>

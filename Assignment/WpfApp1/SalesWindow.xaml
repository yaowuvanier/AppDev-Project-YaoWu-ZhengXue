<Window x:Class="WpfApp1.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SalesWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <DataGrid Name="dataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" />
                    <DataGridTextColumn Header="Amount(kg)" Binding="{Binding AmountKg}" />
                    <DataGridTextColumn Header="Price(CAD)/kg" Binding="{Binding PricePerKg}" />
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Total Sales Amount: " VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,10,0,10" />
            <Label Name="totalSalesLabel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="150,10,0,10" />
            <Button Content="Calculate Sales" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Height="30" Margin="300,5,0,10" Click="CalculateSalesButton_Click" />
        </Grid>

    </Grid>
</Window>

<Window x:Class="CollegeLibraryMgnSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollegeLibraryMgnSys"
        mc:Ignorable="d"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Title="College Library Management System" Height="395" Width="727">
    <Window.Background>
        <ImageBrush ImageSource="/library.jpg"/>
    </Window.Background>
    <Grid>

        <Rectangle Fill="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" HorizontalAlignment="Left" Height="328" Margin="46,18,0,0" Stroke="Black" VerticalAlignment="Top" Width="630" Opacity="0.7"/>



        <Button Content="User" HorizontalAlignment="Left" Margin="180,190,0,0" VerticalAlignment="Top" Width="74" x:Name="BtnUser" Click="BtnUser_Click" Height="30"/>
        <Button Content="Admin" HorizontalAlignment="Left" Margin="469,190,0,0" VerticalAlignment="Top" Width="74" x:Name="BtnAdmin" Click="BtnAdmin_Click" RenderTransformOrigin="1.014,0.75" Height="30"/>
        <Button x:Name="Mainclose" Content="X" HorizontalAlignment="Left" Height="28" Margin="651,18,0,0" VerticalAlignment="Top" Width="25" FontSize="16" Click="Mainclose_Click"/>

    </Grid>
</Window>

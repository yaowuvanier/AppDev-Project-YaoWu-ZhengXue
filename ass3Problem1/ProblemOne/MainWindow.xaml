<Window x:Class="ProblemOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemOne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Account Balance:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="balanceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="178,20,0,0" RenderTransformOrigin="0.723,0.604"/>

        <Label Content="Number of Checks Written:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="numChecksTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="178,64,0,0" RenderTransformOrigin="0.963,0.693"/>

        <Button Content="Calculate Fees" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="20,100,0,0" Click="CalculateFees_Click"/>

        <Label x:Name="resultLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"/>
    </Grid>
</Window>
